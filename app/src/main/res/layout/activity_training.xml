<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MaterialLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".MaterialActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/trainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Здесь будет ваш заголовок"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/cancelButton"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_below="@+id/trainTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="65dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/ic_baseline_cancel_24" />

            <ImageButton
                android:id="@+id/acceptButton"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_below="@+id/trainTitle"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="65dp"
                app:srcCompat="@drawable/ic_baseline_add_circle_24" />

            <Button
                android:id="@+id/checkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cancelButton"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Проверка" />

            <TextView
                android:id="@+id/trainText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/checkButton"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:text="Здесь будет ваш текст"
                android:textSize="16sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>