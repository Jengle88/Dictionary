<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaterialActivity">

    <TextView
        android:id="@+id/text_bad_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Неудачных повторений: "
        app:layout_constraintStart_toStartOf="@+id/text_good_repeat"
        app:layout_constraintTop_toBottomOf="@+id/text_good_repeat" />

    <TextView
        android:id="@+id/material_title"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="35dp"
        android:text="Здесь будет заголовок"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_good_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Успешных повторений: "
        app:layout_constraintStart_toStartOf="@+id/material_title"
        app:layout_constraintTop_toBottomOf="@+id/material_title" />

    <TextView
        android:id="@+id/count_good_repeat"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/count_bad_repeat"
        app:layout_constraintTop_toBottomOf="@+id/material_title" />

    <TextView
        android:id="@+id/count_bad_repeat"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/text_bad_repeat"
        app:layout_constraintTop_toBottomOf="@+id/count_good_repeat" />

    <Button
        android:id="@+id/reset_counts"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:text="Сброс"
        app:layout_constraintBottom_toBottomOf="@+id/count_bad_repeat"
        app:layout_constraintEnd_toEndOf="@+id/material_title"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/count_good_repeat"
        app:layout_constraintTop_toTopOf="@+id/count_good_repeat"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/material_text"
        android:layout_width="350dp"
        android:layout_height="452dp"
        android:layout_marginTop="10dp"
        android:text="Здесь будет текст"
        app:layout_constraintEnd_toEndOf="@+id/material_title"
        app:layout_constraintStart_toStartOf="@+id/material_title"
        app:layout_constraintTop_toBottomOf="@+id/text_bad_repeat" />
</androidx.constraintlayout.widget.ConstraintLayout>